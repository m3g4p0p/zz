{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
		<img src="{{ post.thumbnail.src|resize(1200, 300) }}">
		<section>
			<h1>{{ post.title }}</h1>

			{% if current_user_can('edit_posts') %}
				<a href="{{ post.link }}">{{ _e('edit') }}</a>
			{% endif %}

			<p>
				<span>By</span>
				<a href="{{post.author.path}}"> {{ post.author.name }} </a>
				<span>&bull;</span>
				{{ post.date }}
			</p>
			<div>
				{{post.content}}
			</div>
		</section>
	</article>
{% endblock %}
